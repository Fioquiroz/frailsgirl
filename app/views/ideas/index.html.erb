<h1>Blog de ideas</h1>
<%= link_to 'New Idea', new_idea_path %>

<% @ideas.each do |idea| %>

<hr>

<div>
  <h2><%= idea.name %></h2>
  <p><%=idea.description %></p>

 <p>
   <%= image_tag(idea.picture, :width => 600) %>
  </p>

  <p>
  <iframe width="560" height="315" src="http://www.youtube.com/embed/<%= idea.video %>" frameborder="0" allowfullscreen></iframe>
  </p>

  <%= link_to 'Show', idea %> |
  <%= link_to 'Edit', edit_idea_path(idea) %> |
  <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
